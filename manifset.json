
{
    "manifest_version": 3,
    "name": "Tab Hover Actions",
    "version": "1.0",
    "description": "Performs actions when you hover over a tab.",
    "permissions": ["tabs"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }